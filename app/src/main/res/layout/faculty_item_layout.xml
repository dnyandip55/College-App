<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/text_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacherImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avtar"
            android:layout_marginVertical="@dimen/text_margin"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/teacherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dnyandip Jadhav"
                android:textColor="@color/textColor"
                android:textSize="@dimen/title_size"
                android:fontFamily="@string/regular"/>

            <TextView
                android:id="@+id/teacherPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOD"
                android:textColor="@color/textColor"

                android:textSize="@dimen/title_size"
                android:fontFamily="@string/regular"/>

            <TextView
                android:id="@+id/teacherEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dnyandipjadhav55@gmail.com"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size"
                android:fontFamily="@string/regular"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
